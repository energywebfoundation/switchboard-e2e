{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "typeRoots": ["./node_modules/@types", "./types"],
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "paths": {
      "@utils": ["src/utils/index"],
      "@selectors": ["src/models/index"]
    }
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
